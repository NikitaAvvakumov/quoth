<%= provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up for <span class="quoth">quoth.</span></h1>

    <%= form_for(@user) do |f| %>
	    <%= render 'shared/error_messages' %>

	    <div class="form-group">
        <%= f.label :name %>
	    <%= f.text_field :name, class: 'form-control' %>
	    </div>

        <div class="form-group">
	    <%= f.label :username, 'A short user name' %>
	    <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="form-group">
	    <%= f.label :email %>
	    <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
	    <%= f.label :password, 'Password (6 characters min)' %>
		<%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :password_confirmation, 'Confirm your password' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

	    <%= f.submit 'Sign up for quoth.', class: 'btn btn-info btn-lg' %>
    <% end %>
  </div>
</div>
